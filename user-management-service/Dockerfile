# Start with a base image
FROM openjdk:17-jdk-alpine

EXPOSE 8085

# Set environment variables for RabbitMQ
ENV SPRING_RABBITMQ_HOST=rabbit-mq
ENV SPRING_RABBITMQ_PORT=5672
ENV SPRING_RABBITMQ_USERNAME=guest
ENV SPRING_RABBITMQ_PASSWORD=guest

# Target location of app's .jar file generated by Gradle
ARG JAR_FILE=build/libs/user-management-*.jar

WORKDIR /opt/app

# Copy the application's built jar file to the image filesystem
COPY ${JAR_FILE} app.jar

ENTRYPOINT ["java","-Djava.security.egd=file:/application.properties/./urandom","-jar","/opt/app/app.jar"]