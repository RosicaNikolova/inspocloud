# Start with a base image
FROM openjdk:17-jdk-alpine

EXPOSE 8081

# Target location of app's .jar file generated by Gradle
ARG JAR_FILE=build/libs/photo-upload-*.jar

WORKDIR /opt/app

# Copy the application's built jar file to the image filesystem
COPY ${JAR_FILE} app.jar

ENTRYPOINT ["java","-Djava.security.egd=file:/dev/./urandom","-jar","/opt/app/app.jar"]